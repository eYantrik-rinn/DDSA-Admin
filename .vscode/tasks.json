{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Development Server",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Generate Prisma Client",
			"type": "shell",
			"command": "npx",
			"args": [
				"prisma",
				"generate"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Reset Database",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"db:reset"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		}
	]
}